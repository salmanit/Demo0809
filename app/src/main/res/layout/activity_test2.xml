<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar_test"/>
    <com.sage.demo0809.widget.RelativeLayoutCustomState
        android:id="@+id/rv_layout1"
        android:background="@drawable/custom_state_bg_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:background="@drawable/email_read_state"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="hello"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.sage.demo0809.widget.RelativeLayoutCustomState>
    <com.sage.demo0809.widget.RelativeLayoutCustomState
        android:id="@+id/rv_layout2"
        android:background="@drawable/custom_state_bg_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/email_read_state"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="hello"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.sage.demo0809.widget.RelativeLayoutCustomState>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb1"
            android:text="rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb2"
            android:text="rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
<ImageView
    android:id="@+id/iv_scale"
    android:layout_marginLeft="50dp"
    android:scaleType="centerCrop"
    android:src="@mipmap/banner"
    android:layout_width="200dp"
    android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv"
        android:text="just ignore what just happened,okey?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_system"
        android:layout_marginLeft="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/banner"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</LinearLayout>