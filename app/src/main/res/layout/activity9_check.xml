<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<FrameLayout
    android:id="@+id/layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_set"
            android:text="设置密码"
            android:textSize="20sp"
            android:padding="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check"
            android:text="验证密码"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.sage.demo0809.widget.PswText
        android:id="@+id/psw_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <com.sage.demo0809.widget.PswText
        android:id="@+id/psw_txt2"
        android:paddingTop="5dp"
        app:isDrawBorderImg="false"
        app:borderColor="#ff5127"
        app:inputBorder_color="#ff5127"
        app:pswColor="#ff5127"
        app:borderRadius="0dp"
        app:pswLength="5"
        app:clearTextPsw="true"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <com.sage.demo0809.widget.lock.LockPatternView
        android:id="@+id/lock_view"
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <com.sage.demo0809.widget.lock.LockPatternView2
        android:id="@+id/lock_view2"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
</FrameLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    </RelativeLayout>