<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context="com.sage.demo0809.ActivityChooseMood">
    <LinearLayout
        android:id="@+id/layout_word"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="你今天的心情是?"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="What's your mood today?"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_discover_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/introclick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv2"
            android:src="@mipmap/introclick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="-20dp"
            android:layout_alignTop="@+id/iv4"
            android:layout_toRightOf="@+id/iv1"
            android:layout_toEndOf="@+id/iv1" />
        <ImageView
            android:id="@+id/iv3"
            android:src="@mipmap/introclick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv4"
            android:layout_alignRight="@+id/iv4"
            android:layout_alignEnd="@+id/iv4" />
        <ImageView
            android:id="@+id/iv4"
            android:src="@mipmap/introclick"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv1"
            android:layout_toEndOf="@+id/iv1"
            android:layout_marginLeft="83dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="126dp" />
        <ImageView
            android:id="@+id/iv5"
            android:src="@mipmap/introclick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv3"
            android:layout_toRightOf="@+id/iv1"
            android:layout_toEndOf="@+id/iv1" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_i_know"
        android:visibility="invisible"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_know"
            android:layout_marginTop="20dp"
            android:text="我知道了"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
