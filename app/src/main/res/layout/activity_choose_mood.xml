<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/mood_bubble_bg"
    tools:context=".ui.ActivityChooseMood">
    <com.sage.demo0809.PowerImageView
        android:id="@+id/iv_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.sage.demo0809.PowerImageView
        android:id="@+id/iv_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_word"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="你今天的心情是?"
                android:textColor="#fff"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="What's your mood today?"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/layout_word"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv2"
                android:background="@mipmap/mood_bubble"
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:layout_marginLeft="90dp"
                android:text="爱咋咋地"
                android:textColor="#ffffff"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="15dp"
                android:background="@mipmap/mood_bubble"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:text="一般吧"
                android:layout_alignParentRight="true"
                android:layout_marginRight="42dp"
                android:textColor="#ffffff"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv1"
                android:background="@mipmap/mood_bubble"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="超级开心"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/tv2"/>


            <TextView
                android:id="@+id/tv4"
                android:background="@mipmap/mood_bubble"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="抓狂"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="75dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv3"/>
            <TextView
                android:id="@+id/tv5"
                android:background="@mipmap/mood_bubble"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:layout_below="@id/tv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="抓狂"
                android:textColor="#ffffff"
                android:gravity="center" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_i_know"
            android:visibility="visible"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_know"
                android:layout_marginTop="20dp"
                android:text="我知道了"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>




</FrameLayout>
