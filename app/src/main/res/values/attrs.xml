<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--密码输入框-->
    <declare-styleable name="PswText">
        <!--密码长度-->
        <attr name="pswLength" format="integer"/>
        <!--密码框颜色-->
        <attr name="borderColor" format="color"/>
        <!--密码颜色-->
        <attr name="pswColor" format="color"/>
        <!--输入时密码框颜色-->
        <attr name="inputBorder_color" format="color"/>
        <!--输入时密码框阴影颜色-->
        <attr name="borderShadow_color" format="color"/>
        <!--明文密码文字大小-->
        <attr name="psw_textSize" format="dimension"/>
        <!--密码框圆角程度-->
        <attr name="borderRadius" format="dimension"/>
        <!--是否使用图片绘制密码框-->
        <attr name="isDrawBorderImg" format="boolean"/>
        <!--按back键时，是否需要绘制明文密码-->
        <attr name="isShowTextPsw" format="boolean"/>
        <!--输入密码时密码框是否有阴影-->
        <attr name="isShowBorderShadow" format="boolean"/>
        <!--密码框图片-->
        <attr name="borderImg" format="reference"/>
        <!--输入时变化的密码框图片-->
        <attr name="inputBorderImg" format="reference"/>
        <!--延迟绘制密码圆点的时间,1000 = 1s-->
        <attr name="delayTime" format="integer"/>
        <!--是否只绘制明文密码-->
        <attr name="clearTextPsw" format="boolean"/>
        <!--是否只绘制圆点-->
        <attr name="darkPsw" format="boolean"/>
    </declare-styleable>





    <declare-styleable name="MyTextViewLCR_style">
        <attr name="words_count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RelativeLayout_with_bg_my">
        <attr name="sage_arrow_height" format="dimension"/>
        <attr name="sage_arrow_width" format="dimension"/>
        <attr name="sage_arrow_start" format="dimension"/>
        <attr name="sage_bg_color" format="color"/>
        <attr name="sage_radius_top_left" format="dimension"/>
        <attr name="sage_radius_top_right" format="dimension"/>
        <attr name="sage_radius_bottom_left" format="dimension"/>
        <attr name="sage_radius_bottom_right" format="dimension"/>
        <attr name="sage_radius_same" format="dimension"/>
        <attr name="sage_arrow_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
            </attr>
    </declare-styleable>

    <!--自定义柱状图属性-->
    <declare-styleable name="MyChartView">
        <attr name="leftColor" format="color"></attr>
        <attr name="leftColorBottom" format="color"></attr>
        <attr name="selectLeftColor" format="color"></attr>
        <attr name="rightColor" format="color"></attr>
        <attr name="rightColorBottom" format="color"></attr>
        <attr name="selectRightColor" format="color"></attr>
        <attr name="xyColor" format="color"></attr>
    </declare-styleable>

    <!--  波浪滚动圆球View属性  -->
    <attr name="batteryLevel" format="float" />
    <attr name="radius" format="integer" />
    <attr name="flowRadius" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="flowViewColor" format="color" />

    <declare-styleable name="BatteryView">
        <attr name="batteryLevel" />
        <attr name="radius" />
        <attr name="flowRadius" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="flowViewColor"/>
    </declare-styleable>

</resources>